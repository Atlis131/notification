{% extends 'base.html.twig' %}

{% block title %}
    <title>
        {{ 'User list' }}
    </title>
{% endblock %}

{% block styles %}
    {% include 'partials/_styles_datatable.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn-info btn btn-user" href='{{ path('user_add') }}'>
                            <i class="fa-solid fa-pen"></i>
                            Add User
                        </a>
                    </div>
                    <div class="card-body row">
                        <table id="userList" class="display responsive nowrap" style="width:100%">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Email Subscription</th>
                                <th>SMS Subscription</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="card">
                    <div class="card-body row">
                        <form method="post" action="#">
                            <label class="fw-bold mb-2" for="message">Message</label>
                            <div class="ml-2">
                                <textarea style="height: 150px; width: 100%" name="message" id="message"></textarea>
                            </div>
                            <div class="mt-2">
                                <label class="fw-bold mb-2" for="type">Type</label>
                                <select class="form-control fw-bold" name="type" id="type">
                                    <option value="email">Email</option>
                                    <option value="sms">SMS</option>
                                </select>
                            </div>
                            <div class="mt-2">
                                <a class="btn-success btn"> <i class="fa-solid fa-save" aria-hidden="true"></i>
                                    Send
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts_bottom %}
    {{ parent() }}

    {% include 'User/datatable/list.html.twig' %}
{% endblock %}
